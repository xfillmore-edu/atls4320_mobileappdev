        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/bg600_dark</item>
        <item name="colorPrimaryVariant">@color/bg600</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal800_dark</item>
        <item name="colorSecondaryVariant">@color/teal800</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>
</resources>