<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NavDrawerDemo" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/cu_gold</item>
        <item name="colorPrimaryVariant">@color/cu_gold</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/cu_dkgrey</item>
        <item name="colorSecondaryVariant">@color/cu_ltgrey</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.NavDrawerDemo.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.NavDrawerDemo.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.NavDrawerDemo.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="cu_theme" parent="Theme.MaterialComponents.DayNight">
        <item name="colorPrimary">@color/cu_gold</item>
        <item name="colorSecondary">@color/cu_dkgrey</item>
    </style>

</resources>